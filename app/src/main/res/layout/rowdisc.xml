<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    android:layout_centerInParent="true"
    android:layout_gravity="top"
    android:background="#ffff">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgDev"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_devices_black_24dp"
                android:padding="@dimen/fab_margin"
/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Name :"
                android:layout_toRightOf="@+id/imgDev"
                android:layout_marginTop="@dimen/fab_margin"
                android:id="@+id/devName"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/devIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgDev"
                android:layout_marginTop="45dp"
                android:text="Device IP :"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/devName"
                android:id="@+id/devname"
                android:layout_marginTop="@dimen/fab_margin"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/devIP"
                android:layout_marginTop="45dp"
                android:paddingLeft="5dp"
                android:id="@+id/devip"
                android:textStyle="bold"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="ADD"
                android:background="@drawable/button"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="6dp"
                android:layout_alignTop="@+id/devip"
                android:layout_alignParentEnd="true"
                android:textColor="#fff"
                android:id="@+id/addbutton"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>