<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"


        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="false"
        card_view:cardPreventCornerOverlap="true"
        android:layout_centerInParent="true"
        android:layout_gravity="top"
        android:background="#ffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/image_rel_view"
            >
        <ImageView
            android:id="@+id/filetheme"
            android:layout_width="47dp"
            android:layout_height="47dp"


            />
        <ImageView
            android:id="@+id/file_ext"

            android:layout_width="20dp"
            android:layout_alignParentBottom="true"

            android:layout_height="20dp"
            android:src="@mipmap/amp3"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/image_rel_view"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/file_name"
                android:textStyle="bold"
                android:text="Concrete Math"
                android:gravity="center_vertical"
                android:textSize="18dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_below="@id/file_name"
                android:id="@+id/filesize"
                android:textColor="#B0BEC5"
                android:text="256kB"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/filesize"
                android:layout_below="@id/file_name"
                android:id="@+id/date_created"
                android:paddingLeft = "4dp"

                android:textColor="#B0BEC5"
                android:gravity="right|center_vertical"
                android:paddingRight="4dp"
                />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:gravity="center_vertical"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>
    </android.support.v7.widget.CardView>

